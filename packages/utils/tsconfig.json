{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "es2015",
    "lib": [
      "es2017"
    ],
    "strict": true,
    "noEmitOnError": false,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/src"
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src"
  ]
}